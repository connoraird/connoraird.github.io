{
  "background": {
    "color": "#2c2c2b"
  },
  "fullScreen": {
    "enable": true,
    "zIndex": 0
  },
  "emitters": {
    "direction": "bottom",
    "life": {
      "count": 0,
      "duration": 0.1,
      "delay": 0.1
    },
    "rate": {
      "delay": 0.2,
      "quantity": 5
    },
    "size": {
      "width": 100,
      "height": 0
    },
    "position": {
      "y": 0,
      "x": 50
    }
  },
  "interactivity": {
    "detect_on": "canvas",
    "events": {
      "onhover": {
        "enable": true,
        "mode": "repulse"
      },
      "onclick": {
        "enable": true,
        "mode": "push"
      },
      "resize": true
    },
    "modes": {
      "push": {
        "particles_nb": 50
      },
      "repulse": {
        "distance": 100,
        "duration": 10
      }
    }
  },
  "particles": {
    "number": {
      "value": 100
    },
    "color": {
      "value": "#fff"
    },
    "shape": {
      "type": "char",
      "character": [
        {
          "fill": true,
          "font": "Font Awesome 5 Free",
          "style": "",
          "value": ["\uf2dc"],
          "weight": "900"
        }
      ],
      "polygon": {
        "nb_sides": 5
      }
    },
    "opacity": {
      "value": 0.5,
      "random": true,
      "anim": {
        "enable": false,
        "speed": 1,
        "opacity_min": 0.1,
        "sync": false
      }
    },
    "size": {
      "value": {
        "min": 1,
        "max": 20
      }
    },
    "tilt": {
      "direction": "random",
      "enable": true,
      "move": true,
      "value": {
        "min": 0,
        "max": 360
      },
      "animation": {
        "enable": true,
        "speed": 60
      }
    },
    "move": {
      "enable": true,
      "gravity": {
        "acceleration": 15,
        "enable": true,
        "inverse": false,
        "maxSpeed": 3
      },
      "random": false,
      "straight": false,
      "out_mode": "destroy",
      "bounce": false
    },
    "rotate": {
      "value": {
        "min": 0,
        "max": 270
      },
      "direction": "random",
      "move": true,
      "animation": {
        "enable": true,
        "speed": 10
      }
    },
    "roll": {
      "darken": {
        "enable": true,
        "value": 30
      },
      "enlighten": {
        "enable": true,
        "value": 30
      },
      "enable": true,
      "speed": {
        "min": 15,
        "max": 25
      }
    },
    "wobble": {
      "distance": 30,
      "enable": true,
      "move": true,
      "speed": {
        "min": -15,
        "max": 15
      }
    }
  },
  "retina_detect": true
}
