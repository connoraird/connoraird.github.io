{
  "background": {
    "color": "#000"
  },
  "detectRetina": true,
  "fpsLimit": 30,
  "fullScreen": {
    "enable": true,
    "zIndex": -1
  },
  "interactivity": {
    "detect_on": "window",
    "events": {
      "onclick": {
        "enable": true,
        "mode": "push"
      },
      "onHover": {
        "enable": true,
        "mode": "bubble"
      }
    },
    "modes": {
      "push": {
        "particles_nb": 1
      },
      "bubble": {
        "distance": 50,
        "size": 5
      }
    }
  },
  "particles": {
    "color": {
      "value": "#fff"
    },
    "number": {
      "limit": 0,
      "value": 400
    },
    "opacity": {
      "random": {
        "enable": true,
        "minimumValue": 0.1
      },
      "value": 1
    },
    "shape": {
      "type": "circle"
    },
    "size": {
      "random": {
        "enable": true,
        "minimumValue": 0.5
      },
      "value": 1
    },
    "twinkle": {
      "particles": {
        "enable": true,
        "frequency": 0.005,
        "opacity": 0.5,
        "color": {
          "value": ["#ff0000", "#0000ff"]
        }
      }
    },
    "move": {
      "enable": true,
      "random": false,
      "direction": "right",
      "speed": 0.1,
      "trail": {
        "enable": true,
        "length": "1"
      },
      "outModes": {
        "default": "out"
      },
      "angle": {
        "offset": 0,
        "value": 0
      }
    }
  }
}
